#!/usr/bin/env python3
"""
Script: airunner-build-ui
Usage: airunner-build-ui
Builds all QSS and CSS files for Airunner, including theme CSS for the home widget.
"""
import sys
from pathlib import Path

if __name__ == "__main__":
    # Import and run the QSS/CSS build logic from process_qss.py
    sys.path.insert(0, str(Path(__file__).parent))
    import process_qss

    process_qss.process_qss()
    process_qss.build_all_theme_css()
    print("All QSS and CSS theme files built.")
